# Server Configuration
NODE_ENV=development
PORT=5000

# CORS
CORS_ORIGIN=http://localhost:3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/conekt-lab

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Email (Optional)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-pass
FROM_EMAIL=noreply@conekt-lab.com
FROM_NAME=conekt-lab

# Gold Price APIs
GOLD_API_KEY=your-gold-api-key
METALS_DEV_API_KEY=metals-dev-api-key

# Exchange Rate API (optional, uses free endpoint by default)
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key

# Price Update Settings
PRICE_UPDATE_INTERVAL=60000  # 1 minute in milliseconds
API_RATE_LIMIT=60000 